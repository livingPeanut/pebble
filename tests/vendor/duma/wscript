def configure(conf):
    pass

def build(bld):
    if 'DUMA_DISABLED' in bld.env.DEFINES:
      return

    import sys

    defines = []
    if 'linux' in sys.platform:
      defines.append('_POSIX_C_SOURCE')
    elif 'darwin' in sys.platform:
      defines.append('DUMA_SO_PREFER_GETENV')

    bld.stlib(source=['duma.c', 'print.c', 'sem_inc.c'],
              defines=defines,
              target='duma')

